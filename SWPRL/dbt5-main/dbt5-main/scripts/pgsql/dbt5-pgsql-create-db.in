usage()
{
	echo "usage: create-db -h"
	echo "usage: create-db [-p port]"
}

PRIVILEGED=0

while getopts "d:hp:" OPT; do
	case ${OPT} in
	d)
		DBT5DBNAME=${OPTARG}
		;;
	h)
		usage
		exit 0
		;;
	p)
		PORT=${OPTARG}
		;;
	esac
done

if [ ${PRIVILEGED} -eq 1 ] && [ -z ${DBT5PGDATA} ]; then
	echo "DBT5PGDATA not defined."
	exit 1
fi

if [ "${DBT5DBNAME}" = "x" ]; then
	echo "DBT5DBNAME not defined."
	exit 1
fi

if [ ! "x${PORT}" = "x" ]; then
	PORTOPT="-p ${PORT}"
fi

if [ ${PRIVILEGED} -eq 1 ]; then
	# Create database
	echo "Creating database..."
	if [ -d ${DBT5PGDATA} ]; then
		echo "======================================="
		echo "PGData directory ${DBT5PGDATA} already exists"
		echo "Skipping initdb"
		echo "======================================="
	else
		initdb -D ${DBT5PGDATA} --locale=C || exit 1
	fi

	if [ ! "x${PORT}" = "x" ]; then
		dbt5-pgsql-start-db -p "-c port=${PORT}"
	else
		dbt5-pgsql-start-db
	fi

	# Give the database a few seconds to get going
	sleep 4
fi

PSQL="psql -X ${PORTOPT} -d ${DBT5DBNAME} -At"
SQL="SELECT 1 FROM pg_database WHERE lower(datname) = lower('${DBT5DBNAME}');"
RC="$(eval "${PSQL} -c \"${SQL}\" 2> /dev/null")"
if [ "${RC}" = "1" ]; then
	echo "database already exists: ${DBT5DBNAME}"
else
	eval "createdb ${PORTOPT} ${DBT5DBNAME}" || exit 1
fi

exit 0
