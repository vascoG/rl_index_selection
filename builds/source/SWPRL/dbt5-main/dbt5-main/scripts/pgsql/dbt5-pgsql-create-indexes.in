		LOCATION '${TS_PK_ACCOUNT_PERMISSION_DIR}';
		${BDRWAIT}
		CREATE ${TS_PK_CUSTOMER} LOCATION '${TS_PK_CUSTOMER_DIR}';
		${BDRWAIT}
